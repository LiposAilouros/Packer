{
  "builders": [
    {

      "boot_wait": "5s",
      "boot_command": [ "<enter>" ],
      "communicator": "winrm",
      "cpus": 4,
      "disk_size": "{{user `disk_size`}}",
      "disk_compression": "true",
      "disk_interface": "virtio",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/fixnetwork.ps1",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/InstallSoftware.ps1"
      ],
      "format": "qcow2",
      "headless": true,
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "output_directory": "windows_11-qemu",
      "type": "qemu",
      "qemuargs": [
	[ "-bios", "/usr/share/OVMF/OVMF_CODE.fd" ],
        ["-drive", "file=windows_11-qemu/{{ .Name }},if=virtio,cache=writeback,discard=ignore,format=qcow2,index=1"],
        ["-drive", "file={{ user `iso_url` }},media=cdrom,index=2"],
        ["-drive","file={{ user `virtio_win_iso` }},media=cdrom,index=3"]
      ],
      "vm_name": "{{user `vm_name`}}.qcow2",
      "winrm_port": "5985",
      "winrm_password": "S0m3Pa55w0rd",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "ovh",
      "net_device": "virtio-net",
      "vnc_bind_address": "0.0.0.0"
    
    }
  ],

  "provisioners": [
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "./scripts/debloat-windows.ps1",
	"./scripts/InstallSoftware.ps1"	
      ],
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "./scripts/set-powerplan.ps1",
	"./scripts/InstallSoftware.ps1"
      ],
      "type": "powershell"
    },
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "remote_path": "/tmp/script.bat",
      "scripts": [
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/set-winrm-automatic.bat",
        "./scripts/debloat-windows.bat",
        "./scripts/uac-enable.bat",
        "./scripts/dis-updates.bat",
        "./scripts/disable-auto-logon.bat",
        "./scripts/compact.bat"
      ],
      "type": "windows-shell"
    }
      ],
  "variables": {
    "autounattend": "./answer_files/11-uefi-fr/Autounattend.xml",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "4096",
    "headless": "false",
    "iso_checksum": "",
    "iso_url": "", 
    "restart_timeout": "5m",
    "vhv_enable": "false",
    "virtio_win_iso": "",
    "vm_name": "",
    "winrm_timeout": "6h",
    "vmx_version": "14"
  }
}

